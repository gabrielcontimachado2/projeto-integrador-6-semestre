<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.PerfilInstituicao">

    <Button
        android:id="@+id/btn_fechar_perfil_instituicao"
        android:layout_width="@dimen/margin_default_large"
        android:layout_height="@dimen/margin_default_large"
        android:layout_marginStart="@dimen/margin_default_minimum"
        android:layout_marginTop="@dimen/margin_default_minimum"
        android:background="@drawable/ic_img_fechar"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_perfil_instituicao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="42dp"
                            android:layout_marginTop="66dp"
                            android:src="@drawable/ic_img_foto_perfil_instituicao"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textlayout_perfil_nome_instituicao"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_default_micro"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/img_perfil_instituicao"
                            app:layout_constraintTop_toTopOf="@id/img_perfil_instituicao">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edttext_perfil_nome_instituicao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textShortMessage" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textlayout_perfil_cnpj_instituicao"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            app:layout_goneMarginStart="@dimen/margin_default_micro"
                            android:layout_marginStart="@dimen/margin_default_micro"
                            app:layout_constraintTop_toBottomOf="@+id/textlayout_perfil_nome_instituicao"
                            app:layout_constraintStart_toEndOf="@+id/img_perfil_instituicao"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edttext_perfil_cnpj_instituicao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textShortMessage" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textlayout_perfil_endereco_instituicao"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            app:layout_goneMarginStart="@dimen/margin_default_micro"
                            android:layout_marginStart="@dimen/margin_default_micro"
                            app:layout_constraintTop_toBottomOf="@+id/textlayout_perfil_cnpj_instituicao"
                            app:layout_constraintStart_toEndOf="@+id/img_perfil_instituicao"
                            app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edttext_funcao_integrante"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textShortMessage" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>